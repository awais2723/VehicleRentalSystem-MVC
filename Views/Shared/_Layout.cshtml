<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - Vehicle Rental System</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark shadow-sm fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <i class="bi bi-car-front-fill me-2"></i> Vehicle Rental
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav" aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                    @if (Session["Role"]?.ToString() == "Admin")
                    {
                        <li class="nav-item">@Html.ActionLink("Dashboard", "Dashboard", "Admin", null, new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("Vehicles", "Vehicles", "Admin", null, new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("Reports", "Reports", "Admin", null, new { @class = "nav-link" })</li>
                    }
                    else if (Session["Role"]?.ToString() == "Customer")
                    {
                        <li class="nav-item">@Html.ActionLink("Dashboard", "Dashboard", "Customer", null, new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("My Bookings", "MyBookings", "Customer", null, new { @class = "nav-link" })</li>
                    }
                </ul>

                <ul class="navbar-nav ms-auto mb-2 mb-lg-0 d-flex align-items-center">
                    @if (Session["Username"] != null)
                    {
                        <li class="nav-item user-greeting d-flex align-items-center">
                            Hello, <strong class="ms-1">@Session["Username"]</strong>
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Logout", "Logout", "Account", null, new { @class = "btn btn-outline-light" })
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            @Html.ActionLink("Login", "Login", "Account", null, new { @class = "btn btn-light" })
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container pt-5 mt-4">
        @RenderBody()
        <hr />
        <footer class="text-muted text-center small mt-4">
            <p>&copy; @DateTime.Now.Year - Vehicle Rental System</p>
        </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>