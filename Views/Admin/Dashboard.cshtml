@{
    ViewBag.Title = "Admin Dashboard";
}

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-dark fw-bold mb-0">Admin Dashboard</h2>
        <div class="d-flex gap-3">
            <a href="/Admin/PendingReturns" class="btn btn-warning d-flex align-items-center">
                <i class="bi bi-arrow-counterclockwise me-2"></i> Return Requests
            </a>
            <a href="/Admin/ViewCustomers" class="btn btn-outline-secondary d-flex align-items-center">
                <i class="bi bi-people me-2"></i> View Customers
            </a>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card dashboard-card shadow-sm border-start border-4 border-primary h-100">
                <div class="card-body d-flex flex-column">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="card-title text-muted mb-0">Total Vehicles</h5>
                        <i class="bi bi-truck-front fs-2 text-primary"></i>
                    </div>
                    <p class="display-6 fw-bold mb-4">@ViewBag.TotalVehicles</p>
                    <a href="/Admin/Vehicles" class="btn btn-primary mt-auto">
                        Manage Vehicles <i class="bi bi-arrow-right ms-2"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card dashboard-card shadow-sm border-start border-4 border-info h-100">
                <div class="card-body d-flex flex-column">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="card-title text-muted mb-0">Total Bookings</h5>
                        <i class="bi bi-calendar-check fs-2 text-info"></i>
                    </div>
                    <p class="display-6 fw-bold mb-4">@ViewBag.TotalBookings</p>
                    <a href="/Admin/BookedVehicles" class="btn btn-info mt-auto">
                        View Bookings <i class="bi bi-arrow-right ms-2"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card dashboard-card shadow-sm border-start border-4 border-success h-100">
                <div class="card-body d-flex flex-column">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="card-title text-muted mb-0">Available Vehicles</h5>
                        <i class="bi bi-check-circle fs-2 text-success"></i>
                    </div>
                    <p class="display-6 fw-bold mb-4">@ViewBag.TotalAvailableVehicles</p>
                    <a href="/Admin/AvailableVehicles" class="btn btn-success mt-auto">
                        View Available <i class="bi bi-arrow-right ms-2"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-12 mt-4">
            <div class="card dashboard-card shadow-sm p-4">
                <h4 class="mb-4 text-dark text-center">Comprehensive Reports</h4>
                <div class="row g-3 justify-content-center">
                    <div class="col-md-4">
                        <a href="/Admin/VehiclePerformanceReport" class="btn btn-outline-primary w-100 py-3 d-flex flex-column align-items-center text-center dashboard-action-btn">
                            <i class="bi bi-graph-up fs-3 mb-2"></i>
                            <span>Vehicle Performance</span>
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a href="/Admin/FinancialOverviewReport" class="btn btn-outline-info w-100 py-3 d-flex flex-column align-items-center text-center dashboard-action-btn">
                            <i class="bi bi-cash-stack fs-3 mb-2"></i>
                            <span>Financial Overview</span>
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a href="/Admin/CustomerActivityReport" class="btn btn-outline-success w-100 py-3 d-flex flex-column align-items-center text-center dashboard-action-btn">
                            <i class="bi bi-person-lines-fill fs-3 mb-2"></i>
                            <span>Customer Activity</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>