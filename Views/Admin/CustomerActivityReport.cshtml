@* Change the model declaration at the top of the file *@
@model VehicleRentalSystem.ViewModels.CustomerActivityReportViewModel

@{
    ViewBag.Title = "Customer Activity Report";
}

<div class="container my-5">
    <h2 class="mb-4 text-dark fw-bold">Customer Activity Report</h2>

    <div class="card shadow-sm p-4 mb-4">
        <h4 class="mb-3 text-dark">Top 10 Customers by Bookings</h4>
        <canvas id="customerBookingChart" style="max-height: 400px;"></canvas>
    </div>

    <div class="card shadow-sm p-4">
        <h4 class="mb-3 text-dark">All Customers & Their Booking Summary</h4>

        @* Now we check the Model property directly and it's much safer *@
        @if (Model.AllCustomersTabularData == null || !Model.AllCustomersTabularData.Any())
        {
            <div class="alert alert-info" role="alert">
                No customer data available for this report.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead class="bg-light">
                        <tr>
                            <th>Username</th>
                            <th>Phone</th>
                            <th>Active Bookings</th>
                            <th>Total Bookings</th>
                            <th>Total Spent</th>
                        </tr>
                    </thead>
                    <tbody>
                        @* Loop through the strongly-typed list *@
                        @foreach (var item in Model.AllCustomersTabularData)
                        {
                            <tr>
                                <td>@item.Username</td>
                                <td>@item.Phone</td>
                                <td>@item.TotalBookings</td>
                                <td>@item.TotalHistoricalBookings</td>
                                <td>@item.TotalSpent.ToString("N")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Data for Top Customers Chart from the Model
            var customerLabels = @Html.Raw(Json.Encode(Model.CustomerLabels));
            var customerBookingCounts = @Html.Raw(Json.Encode(Model.CustomerBookingCounts));

              var ctxCustomerBooking = document.getElementById('customerBookingChart').getContext('2d');
    new Chart(ctxCustomerBooking, {
        type: 'bar',
        data: {
            labels: customerLabels,
            datasets: [{
                label: 'Number of Bookings',
                data: customerBookingCounts,
                backgroundColor: 'rgba(52, 152, 219, 0.7)', // Primary blue
                borderColor: 'rgba(52, 152, 219, 1)',
                borderWidth: 1
            }]
        },
        options: {
            indexAxis: 'y', // Makes it a horizontal bar chart
            responsive: true,
            maintainAspectRatio: false,
            scales: {
                x: {
                    beginAtZero: true,
                    title: {
                        display: true,
                        text: 'Number of Bookings'
                    }
                },
                y: {
                    title: {
                        display: true,
                        text: 'Customer'
                    }
                }
            },
            plugins: {
                legend: {
                    display: false
                },
                title: {
                    display: false
                }
            }
        }
    });
});
    </script>
}
