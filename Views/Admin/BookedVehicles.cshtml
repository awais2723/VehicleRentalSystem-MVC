@model IEnumerable<VehicleRentalSystem.Models.Booking>

<div class="container my-5">
    <h2 class="text-dark fw-bold mb-4">Booked Vehicles</h2>

    <div class="view-card p-0">
        @if (!Model.Any())
        {
            <div class="alert alert-info m-4" role="alert">
                No vehicles are currently booked.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover"> <thead>
                        <tr>
                            <th>Vehicle ID</th>
                            <th>Vehicle Name</th>
                            <th>Customer</th>
                            <th>Phone</th>
                            <th>Start Date</th>
                           
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var booking in Model)
                        {
                            <tr>
                                <td>@booking.Vehicle.Id</td>
                                <td>@booking.Vehicle.Name</td>
                                <td>@booking.User.Username</td>
                                <td>@booking.User.Phone</td>
                                <td>@(booking.StartDate.HasValue ? booking.StartDate.Value.ToShortDateString() : "N/A")</td>
                               
                                
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>