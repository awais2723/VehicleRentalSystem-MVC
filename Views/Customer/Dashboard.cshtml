@model List<VehicleRentalSystem.Models.Vehicle>
@using System.Linq

@{
    ViewBag.Title = "Customer Dashboard";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        
        <div class="btn-group" role="group" aria-label="Customer Actions">
            @Html.ActionLink("My Bookings", "MyBookings", "Customer", null, new { @class = "btn btn-outline-primary" })
            @Html.ActionLink("Booking History", "BookingHistory", "Customer", null, new { @class = "btn btn-outline-secondary" })
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <h3 class="mb-3">Available Vehicles</h3>
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var vehicle in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm border-0 rounded-lg">
                        @if (!string.IsNullOrEmpty(vehicle.ImagePath))
                        {
                            <img src="@Url.Content(vehicle.ImagePath)" class="card-img-top" alt="@vehicle.Name" style="height: 180px; object-fit: cover;">
                        }
                        else
                        {
                            <img src="@Url.Content("~/Images/default_vehicle.jpg")" class="card-img-top" alt="Default Vehicle Image" style="height: 180px; object-fit: cover;">
                        }
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-primary">@vehicle.Name</h5>
                            <p class="card-text mb-1"><small class="text-muted">Type:</small> <strong>@vehicle.Type</strong></p>
                            <p class="card-text mb-1"><small class="text-muted">Rate/Day:</small> <strong>@vehicle.RatePerDay</strong></p>
                            <p class="card-text mb-1"><small class="text-muted">Model:</small> <strong>@vehicle.Model</strong></p>
                            <p class="card-text mb-3"><small class="text-muted">Engine Capacity:</small> <strong>@vehicle.EngineCapacity</strong></p>
                            <div class="mt-auto d-grid gap-2">
                                <a href="@Url.Action("Book", "Customer", new { id = vehicle.Id })" class="btn btn-success">Book Now</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info mt-4" role="alert">
            <h4 class="alert-heading">No Vehicles Available!</h4>
            <p>It looks like there are no vehicles available for rental at the moment. Please check back later.</p>
        </div>
    }
</div>